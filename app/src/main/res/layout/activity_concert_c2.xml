<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ConcertC2">

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/cfluteanswer" android:layout_centerHorizontal="true"
            android:layout_alignParentTop="true" android:layout_marginTop="158dp"
            android:text="@string/starting_note_is_c" android:textSize="24sp" android:textAlignment="center"/>
    <TextView
            android:text="@string/cflute"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/cflute"
            android:textAlignment="center" android:textSize="24sp" android:layout_centerHorizontal="true"
            android:layout_alignParentTop="true" android:layout_marginTop="81dp" tools:text="Major C is Concert C"/>
    <Button
            android:text="@string/playcsound"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/MajorCSound" android:layout_centerHorizontal="true"
            android:layout_alignParentBottom="true" android:layout_marginBottom="11dp"/>
</RelativeLayout>